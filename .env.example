# Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# DATABASE_URL="postgresql://lexaflow:lexaflow_dev@localhost:5432/lexaflow?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lexaflow?schema=public"


# Production (Render PostgreSQL)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# =============================================================================
# REDIS
# =============================================================================
# Local development
REDIS_URL="redis://localhost:6379"

# Production (Upstash)
# UPSTASH_REDIS_REST_URL="https://your-endpoint.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"

# JWT Expiration
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Password pepper (additional layer on top of bcrypt)
PASSWORD_PEPPER="your-password-pepper-change-in-production"

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# =============================================================================
# AI / LLM
# =============================================================================
# Groq API for LLaMA 3.1
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL="llama-3.1-70b-versatile"

# AI Rate Limiting (requests per user per minute)
AI_RATE_LIMIT_PER_MINUTE=10

# AI Cache TTL (30 days in seconds)
AI_CACHE_TTL=2592000

# =============================================================================
# EMAIL (Brevo)
# =============================================================================
BREVO_API_KEY="your-brevo-api-key"
EMAIL_FROM="noreply@lexaflow.com"
EMAIL_FROM_NAME="LexaFlow"

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="development"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Admin user (created on first run)
ADMIN_EMAIL="admin@lexaflow.com"
ADMIN_PASSWORD="admin123"

# =============================================================================
# 2FA
# =============================================================================
TOTP_ISSUER="LexaFlow"
TOTP_WINDOW=1

# =============================================================================
# SECURITY
# =============================================================================
# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://lexaflow.netlify.app"

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# INVITATION CODE
# =============================================================================
# Required code for new user registration (REQUIRED - create your own secret code)
# Must be at least 8 characters. Make it complex and unique!
INVITATION_CODE="CODE
